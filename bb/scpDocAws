
set -e

if [ 0 == `find */.kitchen/ -name private_key | wc -l` ] ; then
    echo "No kitchen private key found in subdirs; are you in a cookbook project?"; exit;
fi

HOST=bpds01-ccp-dev.bbcollabcloud.com
TARGET_REMOTE_DIR=${2:-"~"}
SSH_KEY_PATH=~/.ssh/aws.pem

set -x 
scp -i $SSH_KEY_PATH "$1" centos@$HOST:$TARGET_REMOTE_DIR
